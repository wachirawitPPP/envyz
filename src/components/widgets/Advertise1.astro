    <title>Advertise1 Slider</title>
    <style>
      body {
        font-family: 'Prompt', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f9f9f9;
      }

      .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 20px;
      }

      .slider {
        position: relative;
        width: 100%;
        max-width: 800px;
        overflow: hidden;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      }

      .slider-container {
        display: flex;
        transition: transform 0.5s ease-in-out;
      }

      .slider-container img {
        width: 100%;
        flex-shrink: 0;
        border-radius: 10px;
      }

      .slider-btn {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        border: none;
        padding: 10px 15px;
        cursor: pointer;
        z-index: 10;
        border-radius: 50%;
      }

      .slider-btn.left {
        left: 10px;
      }

      .slider-btn.right {
        right: 10px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <!-- Slider Section -->
      <div class="slider">
        <div class="slider-container" id="sliderContainer">
          <img
            src="https://www.ktc.co.th/pub/media/Promotion/Hospital/wellness2024/TC_OCT23-454--Happy-Healthy-Wellness-2024_BN-3.webp"
            alt="Image 1"
          />
          <img src="https://www.bdmswellness.com/storage/images/8f6bd28da9d3f54a59e1337b8a7ff0a1.jpg" alt="Image 2" />
          <img src="https://www.bdmswellness.com/storage/images/be8a566888e85e35801d9e5c7b02d0fa.jpg" alt="Image 3" />
        </div>
        <button class="slider-btn left" id="prevBtn">&#10094;</button>
        <button class="slider-btn right" id="nextBtn">&#10095;</button>
      </div>
    </div>

    <!-- JavaScript -->
    <script>
      const sliderContainer = document.getElementById('sliderContainer');
      const slides = sliderContainer.querySelectorAll('img');
      const totalSlides = slides.length;

      let currentIndex = 0;

      function showSlide(index) {
        if (index < 0) {
          currentIndex = totalSlides - 1;
        } else if (index >= totalSlides) {
          currentIndex = 0;
        } else {
          currentIndex = index;
        }
        sliderContainer.style.transform = `translateX(${-currentIndex * 100}%)`;
      }

      document.getElementById('prevBtn').addEventListener('click', () => {
        showSlide(currentIndex - 1);
      });

      document.getElementById('nextBtn').addEventListener('click', () => {
        showSlide(currentIndex + 1);
      });

      setInterval(() => {
        showSlide(currentIndex + 1);
      }, 3000);
    </script>
  </body>
</html>


