<body class="bg-black min-h-screen flex items-center justify-center">
  <div class="relative w-full h-screen overflow-hidden">
    <div
      id="sliderContainer"
      class="flex transition-transform duration-700 ease-in-out"
    >
      <!-- Slider Images -->
      <img
        class="w-full h-[60vh] object-cover mx-auto"
        src="https://www.ktc.co.th/pub/media/Promotion/Hospital/wellness2024/TC_OCT23-454--Happy-Healthy-Wellness-2024_BN-3.webp"
        alt="Image 1"
      />
      <img
        class="w-full h-[60vh] object-cover mx-auto"
        src="https://www.bdmswellness.com/storage/images/8f6bd28da9d3f54a59e1337b8a7ff0a1.jpg"
        alt="Image 2"
      />
      <img
        class="w-full h-[60vh] object-cover mx-auto"
        src="https://www.bdmswellness.com/storage/images/be8a566888e85e35801d9e5c7b02d0fa.jpg"
        alt="Image 3"
      />
    </div>

    <!-- Slider Buttons -->
    <button
      id="prevBtn"
      class="absolute top-1/3 left-5 transform -translate-y-1/2 bg-white/50 p-4 rounded-full z-10 hover:bg-white/50"
    >
      &#10094;
    </button>
    <button
      id="nextBtn"
      class="absolute top-1/3 right-5 transform -translate-y-1/2 bg-white/50 p-4 rounded-full z-10 hover:bg-white/50"
    >
      &#10095;
    </button>
  </div>

  <script>
    const sliderContainer = document.getElementById('sliderContainer');
    const images = Array.from(sliderContainer.children);  // Get all images
    let currentIndex = 0;  // Start from the first image

    // Hide all images except the current one
    function updateSliderPosition() {
      images.forEach((img, index) => {
        img.style.display = index === currentIndex ? 'block' : 'none';  // Show current image, hide others
      });
    }

    // Move to the next image
    function goToNext() {
      currentIndex = (currentIndex + 1) % images.length;  // Loop back to the first image after the last one
      updateSliderPosition();
    }

    // Move to the previous image
    function goToPrev() {
      currentIndex = (currentIndex - 1 + images.length) % images.length;  // Loop back to the last image before the first one
      updateSliderPosition();
    }

    // Set interval to automatically move to the next image every 3 seconds
    setInterval(goToNext, 3000); // Change image every 3 seconds

    // Event listeners for next and previous buttons
    document.getElementById('nextBtn').addEventListener('click', goToNext);
    document.getElementById('prevBtn').addEventListener('click', goToPrev);

    // Initialize the slider by showing the first image
    updateSliderPosition();
  </script>
</body>
