<!doctype html>
<html lang="th">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Advertise1 Slider</title>
    <style>
      /* CSS สำหรับ Slider */
      .slider {
        justify-content: start;
        position: relative;
        width: 100%;
        max-width: 70%;
        overflow: hidden;

        /* margin: auto; */
      }

      .slider-container {
        display: flex;
        transition: transform 0.5s ease-in-out;
      }

      .slider-container img {
        width: 100%;
        flex-shrink: 0;
      }

      .slider-btn {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        border: none;
        padding: 10px;
        cursor: pointer;
        z-index: 10;
      }

      .slider-btn.left {
        left: 10px;
      }

      .slider-btn.right {
        right: 10px;
      }
    </style>
  </head>
  <body>
    <!-- Slider Section -->
    <div class="flex flex-col sm:flex-row">
      <div class="slider ml-4">
        <div class="slider-container" id="sliderContainer">
          <img
            src="https://www.ktc.co.th/pub/media/Promotion/Hospital/wellness2024/TC_OCT23-454--Happy-Healthy-Wellness-2024_BN-3.webp"
            alt="Image 1"
          />
          <img src="https://www.bdmswellness.com/storage/images/8f6bd28da9d3f54a59e1337b8a7ff0a1.jpg" alt="Image 2" />
          <img src="https://www.bdmswellness.com/storage/images/be8a566888e85e35801d9e5c7b02d0fa.jpg" alt="Image 3" />
        </div>
        <button class="slider-btn left" id="prevBtn">&#10094;</button>
        <button class="slider-btn right" id="nextBtn">&#10095;</button>
      </div>
      <div class="flex flex-row sm:flex-col w-6/12 items-center justify-center mr-4">
        <img
          src="https://www.ktc.co.th/pub/media/Promotion/Hospital/wellness2024/TC_OCT23-454--Happy-Healthy-Wellness-2024_BN-3.webp"
          alt="Image 1"
          width="100%"
        />
        <img
          src="https://www.ktc.co.th/pub/media/Promotion/Hospital/wellness2024/TC_OCT23-454--Happy-Healthy-Wellness-2024_BN-3.webp"
          alt="Image 1"
          width="100%"
        />
      </div>
    </div>

    <!-- JavaScript -->
    <script>
      // JavaScript สำหรับ Slider
      const sliderContainer = document.getElementById('sliderContainer');
      const slides = sliderContainer.querySelectorAll('img');
      const totalSlides = slides.length;

      let currentIndex = 0;

      // ฟังก์ชันเปลี่ยนสไลด์
      function showSlide(index) {
        if (index < 0) {
          currentIndex = totalSlides - 1;
        } else if (index >= totalSlides) {
          currentIndex = 0;
        } else {
          currentIndex = index;
        }
        sliderContainer.style.transform = `translateX(${-currentIndex * 100}%)`;
      }

      // ปุ่มควบคุมสไลด์
      document.getElementById('prevBtn').addEventListener('click', () => {
        showSlide(currentIndex - 1);
      });

      document.getElementById('nextBtn').addEventListener('click', () => {
        showSlide(currentIndex + 1);
      });

      // ตั้งค่า Auto Slide ทุก 3 วินาที
      setInterval(() => {
        showSlide(currentIndex + 1);
      }, 3000);
    </script>
  </body>
</html>
