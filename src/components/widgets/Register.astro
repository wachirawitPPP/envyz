---
import BlankLayout from '~/layouts/BlankLayout.astro';
import type { MetaData } from '~/types';
export interface Props {
  metadata?: MetaData;
  locale?: any;
}
---

<!-- Tailwind CSS -->
<BlankLayout >
  <div class="flex h-screen justify-center items-center">
    <!-- Container -->
    <div
      class="flex flex-col md:flex-row w-full max-w-4xl h-auto md:h-[500px] rounded-lg  overflow-hidden bg-white"
    >
      <!-- Left Section -->
      <div class="md:w-2/5 bg-primary text-white flex justify-center items-center text-center p-6">
        <div>
          <h1 class="text-2xl font-bold mb-4">Welcome to ENVYZ.ME</h1>
          <p class="text-sm">Join us today and create your account to unlock powerful features.</p>
        </div>
      </div>

      <!-- Right Section -->
      <div class="md:w-3/5 w-full p-6 md:p-10">
        <!-- Header -->
        <div class="text-center mb-6">
          <h2 class="text-xl md:text-2xl font-semibold text-gray-800">Sign Up</h2>
          <p class="text-sm md:text-base text-gray-600">Create your account</p>
        </div>

        <!-- Form -->
        <form action="register_process.php" method="POST" class="space-y-4">
          <!-- Full Name -->
          <div>
            <label for="username" class="block text-sm font-medium text-gray-600 mb-1"></label>
            <input
              type="text"
              id="username"
              name="username"
              placeholder="Enter your full name"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            />
          </div>

          <!-- Email Address -->
          <div>
            <label for="email" class="block text-sm font-medium text-gray-600 mb-1">Email Address</label>
            <input
              type="email"
              id="email"
              name="email"
              placeholder="Enter your email"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            />
          </div>

          <!-- Password -->
          <div>
            <label for="password" class="block text-sm font-medium text-gray-600 mb-1">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              placeholder="Create a password"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            />
          </div>

          <!-- Password Options -->
          <div class="flex flex-col md:flex-row justify-between items-center text-sm text-gray-600">
            <label class="flex items-center mb-2 md:mb-0">
              <input type="checkbox" name="remember_password" class="mr-2" />
              Remember Password
            </label>
            <a href="#" class="text-blue-500 hover:underline font-medium">Forgot Password?</a>
          </div>

          <!-- Submit Button -->
          <button
            type="submit"
            class="w-full py-2 bg-primary text-white rounded-md font-medium text-lg transition-colors"
          >
            Sign Up
          </button>
        </form>

        <!-- Already a Member -->
        <p class="text-center text-sm text-gray-600 mt-4">
          Already have an account? <a href="login.html" class="text-blue-500 hover:underline font-medium">Sign In</a>
        </p>
      </div>
    </div>
  </div>
</BlankLayout>
