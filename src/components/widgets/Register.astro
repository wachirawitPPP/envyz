---
import BlankLayout from '~/layouts/BlankLayout.astro';
import type { MetaData } from '~/types';
export interface Props {
  metadata?: MetaData;
  locale?: string;
}
---

<!-- Tailwind CSS -->
<BlankLayout>
  <div class="flex h-screen justify-center items-center bg-gradient-to-r from-blue-50 via-white to-blue-50">
    <!-- Container -->
    <div
      class="flex flex-col md:flex-row w-full max-w-4xl md:h-auto md:min-h-[500px] rounded-lg overflow-hidden bg-white shadow-2xl transform transition-transform hover:scale-105 duration-300"
    >
      <!-- Left Section -->
      <div class="md:w-2/5 bg-gradient-to-br from-[#00AD98] to-[#53b6ac] text-white flex justify-center items-center text-center p-8 md:p-12">
        <div>
          <h1 class="text-3xl font-bold mb-4">Welcome to ENVYZ.ME</h1>
          <p class="text-sm leading-relaxed">
            Join us today and create your account to unlock powerful features.
          </p>
        </div>
      </div>
  
      <!-- Right Section -->
      <div class="md:w-3/5 w-full p-8 md:p-10 flex flex-col justify-center">
        <!-- Header -->
        <div class="text-center mb-6">
          <h2 class="text-2xl md:text-3xl font-semibold text-gray-800">Sign Up</h2>
          <p class="text-sm md:text-base text-gray-500">Create your account</p>
        </div>
  
        <!-- Form -->
        <form action="register_process.php" method="POST" class="space-y-6">
          <!-- Full Name -->
          <div>
            <label for="username" class="block text-sm font-medium text-gray-600 mb-1">Full Name</label>
            <input
              type="text"
              id="username"
              name="username"
              placeholder="Enter your full name"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
            />
          </div>
  
          <!-- Email Address -->
          <div>
            <label for="email" class="block text-sm font-medium text-gray-600 mb-1">Email Address</label>
            <input
              type="email"
              id="email"
              name="email"
              placeholder="Enter your email"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
            />
          </div>
  
          <!-- Password -->
          <div>
            <label for="password" class="block text-sm font-medium text-gray-600 mb-1">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              placeholder="Create a password"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
            />
          </div>
  
          <!-- Password Options -->
          <div class="flex flex-col md:flex-row justify-between items-center text-sm text-gray-600">
            <label class="flex items-center mb-2 md:mb-0">
              <input type="checkbox" name="remember_password" class="mr-2 accent-primary" />
              Remember Password
            </label>
            <a href="#" class="text-blue-500 hover:text-blue-700 hover:underline font-medium transition">Forgot Password?</a>
          </div>
  
          <!-- Submit Button -->
          <button
            type="submit"
            class="w-full py-3 bg-blue-600 text-white rounded-lg font-medium text-lg hover:bg-blue-700 transition transform hover:scale-105"
          >
            Sign Up
          </button>
        </form>
  
        <!-- Already a Member -->
        <p class="text-center text-sm text-gray-600 mt-6">
          Already have an account? 
          <a href="" class="text-blue-500 hover:text-blue-700 hover:underline font-medium transition">
            Sign In
          </a>
        </p>
      </div>
    </div>
  </div>
</BlankLayout>
